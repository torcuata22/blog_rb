<%= render "article", article: @article %>

<%= link_to "Home", root_path %>
<h4>New Comment</h4>
<%= form_with model: [@article, @article.comments.build] do |f| %>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>

<h3>Comments</h3>
<% @article.comments.each do |comment| %>
    <p><%= comment.body %></p>
<% end %>
